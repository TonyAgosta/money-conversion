{% extends 'base.html.twig' %}

{% block title %}Money conversion - Modifica Prodotto{% endblock %}


{% block content %}
    <div class="container mt-4">
        {# Breadcrumb per tornare alla lista dei prodotti #}
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('mostra_prodotto', { id: prodotto.id }) }}" class="text-decoration-none">Torna al prodotto</a></li>
                <li class="breadcrumb-item active" aria-current="page">Aggiungi Prodotto</li>
            </ol>
        </nav>

        <div class="d-flex justify-content-center">
            <h2>Modifica  Prodotto</h2>
        </div>

        <div class="d-flex justify-content-center">
            <div class="col-md-6">
                {{ form_start(form) }}

                {{ form_row(form.nome) }}
                {{ form_row(form.prezzo) }}
                {{ form_row(form.descrizione) }}

                <div class="d-flex justify-content-center mt-3">
                    {{ form_row(form.submit, {'attr': {'style': 'background-color: #93a996; border:none'}}) }}
                </div>

                {{ form_end(form) }}
            </div>
        </div>

    </div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Money conversion - Catalogo{% endblock %}

{% block content %}
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center">
            <h2>Catalogo</h2>
            <a href="{{ path('crea_prodotto') }}" class="btn btn-primary" style="background:#93a996; border:none">Aggiungi Prodotto</a>
        </div>
            {% for label, messages in app.flashes %}
                <div class="alert alert-success" role="alert">
                    {% for message in messages %}
                        <p>{{ message }}</p>
                    {% endfor %}
                </div>
            {% endfor %}

        <table class="table table-striped mt-3">
            <thead>
            <tr>
                <th>ID</th>
                <th>Nome</th>
                <th>Prezzo</th>
                <th>Descrizione</th>
                <th>Azioni</th>
            </tr>
            </thead>
            <tbody>
            {% for prodotto in prodotti %}
                <tr>
                    <td>{{ prodotto.id }}</td>
                    <td>{{ prodotto.nome }}</td>
                    <td>{{ prodotto.prezzo }}</td>
                    <td>{{ prodotto.descrizione | default('Nessuna descrizione') }}</td>
                    <td>
                        <a href="{{ path('mostra_prodotto', { id: prodotto.id }) }}" class="btn btn-info btn-sm ">Vedi</a>
                        <a href="{{ path('modifica_prodotto', { id: prodotto.id }) }}" class="btn btn-warning btn-sm">Modifica</a>
                        <a href="{{ path('elimina_prodotto', { id: prodotto.id }) }}" class="btn btn-danger btn-sm" onclick="return confirm('Sei sicuro di voler eliminare questo prodotto?');">Elimina</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5" class="text-center">Nessun prodotto trovato</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
